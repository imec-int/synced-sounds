shadowcolor = #e0e0e0
offwhite = #F7F7F4
offblack = #333333
offblacktransparant = rgba(51,51,51,0.85)
offwhitetransparant = rgba(255,255,255,0.95)
bgcolor = #efeff4
selectedcolor = #a9ba26

centervertically()
	position absolute
	top 0
	bottom 0
	left 0
	right 0
	margin auto

// ****************************
// # Elements *
// ****************************
*
	margin 0
	padding 0
	list-style none
	text-decoration none
	-webkit-box-sizing border-box // Safari/Chrome, other WebKit
	-moz-box-sizing border-box    // Firefox, other Gecko
	box-sizing border-box         // Opera/IE 8+
	position relative // lost veel frustraties op :-)

html, body
	width 100%
	height 100%
	font-size 16px
	color #000
	font-family 'Roboto', sans-serif

body
	background-color bgcolor
	font-weight 100

a
	text-decoration none
	color gray

button
	font-family 'Roboto', sans-serif

.button, button
	-webkit-appearance none
	border 1px #AAA solid
	background #F0F0F0
	color #666
	cursor pointer
	font-size 13px
	font-weight bold
	height 32px
	line-height 25px
	min-width 32px
	text-align center
	display inline-block
	cursor pointer
	padding 0px 4px

.button.highlight, button.highlight
	background-color selectedcolor

.button:disabled, button:disabled
	opacity 0.4




